<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<title>修改页面</title>
</head>
<body>
	<form action="lidezhengUpdate.do" method="post">
		<table>
			<tr>
				<td colspan="2">用户修改<input type="hidden" name="id" value="${luser.getId()}"/></td> 
			</tr>
			<tr>
				<td>用户名:</td>
				<td><input type="text" name="username" value="${luser.getUsername()}"></td>
			</tr>
			<tr>
				<td>密码:</td>
				<td><input type="text" name="passwd" value="${luser.getPasswd()}"></td>
			</tr>
			<tr>
				<td colspan="2">
					<input type="submit" name="submit">&nbsp;&nbsp;&nbsp;
					<input type="reset" name="reset">
				</td>
			</tr>
		</table>
	</form>
</body>
</html>